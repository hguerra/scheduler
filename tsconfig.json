{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "types": [
      "agenda",
      "dotenv",
      "faker",
      "fs-extra",
      "node",
      "shelljs"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/public"
  ]
}
